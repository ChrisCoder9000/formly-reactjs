{
  "name": "formly-reactjs",
  "version": "0.0.11",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "prepare": "npm run typecheck",
    "typecheck": "tsc --noEmit",
    "publish": "npm publish --access=public",
    "dev": "concurrently \"npm run dev:css\" \"npm run typecheck --watch\"",
    "dev:css": "tailwindcss -i ./src/index.css -o ./src/output.css --watch",
    "build:css": "tailwindcss -i ./src/index.css -o ./src/output.css"
  },
  "keywords": [
    "formly",
    "react",
    "form",
    "builder",
    "formly-reactjs"
  ],
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-slot": "^1.1.1",
    "@types/react-input-mask": "^3.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.473.0",
    "react-day-picker": "^8.10.1",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "concurrently": "^8.0.0"
  }
}
