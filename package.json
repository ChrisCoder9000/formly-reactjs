{
  "name": "formly-reactjs",
  "version": "1.2.4",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/components",
    "dist/constants",
    "dist/lib",
    "dist/utils"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && ROLLUP_WATCH=false rollup -c",
    "dev": "rollup -c -w",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit",
    "publish": "npm publish --access=public",
    "p:patch": "npm run prepare && npm version patch && npm run publish --access=public",
    "p:minor": "npm run prepare && npm version minor && npm run publish --access=public",
    "p:major": "npm run prepare && npm version major && npm run publish --access=public"
  },
  "license": "MIT",
  "keywords": [
    "formly",
    "react",
    "form",
    "builder",
    "formly-reactjs"
  ],
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-slot": "^1.1.1",
    "@types/react-input-mask": "^3.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.473.0",
    "react-day-picker": "^8.10.1",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.0.0",
    "postcss": "^8.5.1",
    "postcss-nesting": "^13.0.1",
    "rollup": "^4.12.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.6.2",
    "typescript": "^5.0.0"
  }
}
